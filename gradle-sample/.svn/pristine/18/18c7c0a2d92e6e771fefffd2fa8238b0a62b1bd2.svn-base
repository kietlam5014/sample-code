/*General========================================================================================*/
.mainHeader {
    font-size:30px;
}

.hpLogo {
	height: 30px;
	width: 30px;
}

#mainSection {
	overflow-x: hidden;
	overflow-y: auto;
}

#registrationForm {
    min-height: initial !important;   
}

.registrationFormLine {
    margin-bottom: 0px ;
}

.base-field-style, .list-field-style,
.base-field-style:hover, .base-field-style:focus {
    padding: 0 10px 0px 10px !important;   
}

#Title {
    max-height: initial;
    min-height: initial;
}

#clearAll {
    font-size: 0.8em !important;   
}

#clearAllIcon, #clearAllContainer.disabled > #clearAllIcon {
    background-size: 14px 14px !important;
    height: 14px !important;
    width: 14px !important;
}

/*General (landscape)============================================================================*/
BODY.landscape .introMain, BODY.landscape .regularText, BODY.landscape .error-msg, 
BODY.landscape A, BODY.landscape .field {
    font-size: 12px;   
}

BODY.landscape .field {
	line-height: 12px;
}

BODY.landscape .main {
    margin: 10px auto 0px auto;   
}

BODY.landscape .introMain {
    margin-bottom: initial !important;
    padding-top: 0 !important;   
}

/*General (portrait)=============================================================================*/
BODY.portrait .introMain, BODY.portrait .regularText, BODY.portrait .error-msg, 
BODY.portrait A, BODY.portrait .field {
    font-size: 14px;   
}

BODY.portrait .field {
	line-height: 14px;
}

